<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListCommandesActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/layout_lineardata"
        android:background="@color/grey_light">
    </View>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_lineardataviewallorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gen_white"
        android:elevation="10dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/ttcomandesbtn"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="Au Shopping !!"
            android:textColor="@color/gen_white"
            android:textSize="18sp"
            android:textAllCaps="false"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_lineardataviewallorder"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="vous n'avez aucune commande."
        android:textSize="15sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewviewttcmd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout_lineardataviewallorder">
    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>